#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	LogoScreen:
	AnotherScreen:
	
<LogoScreen>:
	name: "logo"
	canvas.before:
		Color:
			rgb: 1, 0.5,0
		Rectangle:
			size: self.size
	Label:
		text: "Bienvenido"
		font_size: 50

		
<AnotherScreen>:
	name: "other"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
	ActionBar:
		on_previous: app.printalgo()
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	app_icon: 'code.png'
	            title: 'SimplePay'
	            with_previous: False