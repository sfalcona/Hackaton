#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManagement:
	transition: FadeTransition()
	LogoScreen:
	MainScreen:
	OptionScreen:
	AuthScreen:
	
<LogoScreen>:
	name: "logo"
	canvas.before:
		Color:
			rgb: 1, 0.5,0
		Rectangle:
			size: self.size
	Image:
		source: "logo.png"

		
<MainScreen>:
	saldo : saldo
	name: "main"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      SIMPLEPLAY'[/font][/size]"
	            with_previous: False
	Image:
		id: qr
		source: "code.png"
	Label:
		id: saldo
		pos: (root.width/2 - self.width/2, -qr.height/4)
		color: 0,0,0,1
		font_size: 40
		markup: True
		text: "[font=font]'SALDO'[/font]"

<OptionScreen>:
	name: "option"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      OPCIONES'[/font][/size]"
	            with_previous: False
		
<AuthScreen>:
	name: "auth"
	fullscreen: True
	nameT : nameText
	passwT : passText
	nameL: nameLabel
	passL: passLabel
	BoxLayout:
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: root.size

		size_hint: (None, None)
		size: (200, 200)
		pos: (root.width/2 - self.width/2, root.height/2 - self.height/2)
	    orientation: 'vertical'
	    Label:
	    	id: nameLabel
	    	markup: True
	    	color: 0,0,0,1
	    	font_size: 20
	    	text: 'Usuario'
		TextInput:
			id : nameText
			hint_text: 'Usuario'
			multiline: False
		Label:
			id: passLabel
			markup: True
			color: 0,0,0,1
			font_size : 20
			text: 'Contrasena'
		TextInput:
			id : passText
			hint_text: 'Contrasena'
			password: True
			multiline: False

		Button:
			text: 'Entrar'
			on_release: 
				root.manager.transition = NoTransition()
				root.saveData()