#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManagement:
	transition: FadeTransition()
	LogoScreen:
	AnotherScreen:
	OptionScreen:
	AuthScreen:
	HomeScreen:
	HistoryScreen:
	ChargeScreen:
	WithdrawScreen:
	
<LogoScreen>:
	name: "logo"
	canvas.before:
		Color:
			rgb: 1, 0.5,0
		Rectangle:
			size: self.size
	Image:
		source: "logo.png"

		
<AnotherScreen>:
	name: "main"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      SIMPLEPLAY'[/font][/size]"
	            with_previous: False

<OptionScreen>:
	name: "option"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, .1, .1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      OPCIONES'[/font][/size]"
	            with_previous: False
		
<AuthScreen>:
	name: "auth"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
		TextInput:
			text: 'Nombre'
		TextInput:
			text: 'Password'
			password: True
		Button:
			text: 'hola'
	        on_release: root.changeScreen()
        	

<HomeScreen>:
	name: "Home"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		size_hint: (None, None)
		size: (root.width, 200)
		# pos: (root.width/2 - self.width/2, root.height/2 - self.height/2)
		pos: (0, root.height - self.height)
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: root.size
		Button:
			text: 'HISTORIAL'
			on_release: root.goToCalledScreen("Historial")
			Image:
				size:(self.parent.width/10, self.parent.height/2)
		        source: "./images/history.PNG"
		        center_x: self.width
		        center_y: self.parent.center_y
			
		Button:
			text: 'CARGAR'
	        on_release: root.goToCalledScreen("Cargar")
			Image:
				size:(self.parent.width/10, self.parent.height/2)
		        source: "./images/history.PNG"
		        center_x: self.width
		        center_y: self.parent.center_y

		Button:
			text: 'DESCARGAR'
	        on_release: root.goToCalledScreen("Retirar")
			Image:
				size:(self.parent.width/10, self.parent.height/2)
		        source: "./images/history.PNG"
		        center_x: self.width
		        center_y: self.parent.center_y	        

<HistoryScreen>:
	name: "Historial"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		size_hint: (None, None)
		size: (root.width, 200)
		# pos: (root.width/2 - self.width/2, root.height/2 - self.height/2)
		pos: (0, root.height - self.height)
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: root.size
		ScrollView:
			id: Scroll
	        size_hint: (None, None)
	        size: (400, 400)
	
		Button:
			orientation: 'horizontal'
			size: (root.width/10, root.height/20)
	        source: "./images/history.PNG"
	        center_x: self.width
	        center_y: self.parent.center_y
	        on_release:
	        	root.goToHomeScreen()
			Image:
				size:(self.parent.width/2, self.parent.height/2)
		        source: "./images/history.PNG"
		        center_x: self.parent.center_x
		        center_y: self.parent.center_y


<ChargeScreen>:
	name: "Cargar"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
	Button:
		text: 'HOME' 
        on_release:
        	root.goToHomeScreen()

<WithdrawScreen>:
	name: "Retirar"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
	Button:
		text: 'HOME' 
        on_release:
        	root.goToHomeScreen()