#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManagement:
	transition: FadeTransition()
	LogoScreen:
	AnotherScreen:
	OptionScreen:
	AuthScreen:
	HomeScreen:
	HistoryScreen:
	ChargeScreen:
	WithdrawScreen:
	
<LogoScreen>:
	name: "logo"
	canvas.before:
		Color:
			rgb: 1, 0.5,0
		Rectangle:
			size: self.size
	Image:
		source: "logo.png"

		
<AnotherScreen>:
	name: "main"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      SIMPLEPLAY'[/font][/size]"
	            with_previous: False

<OptionScreen>:
	name: "option"
	fullscreen: True
	canvas.before:
		Color:
			rgb: 1, .1, .1
		Rectangle:
			size: self.size
	ActionBar:
	    pos_hint: {'top':1}
	    background_image: 'white-bg.png'
		background_color: 1,.5,0,1
	    ActionView:
	        use_separator: True
	        ActionPrevious:
	        	on_release: 
	        		root.manager.transition = NoTransition()
	        		root.buttonCallback()
	        	app_icon: 'logo.png'
	        	markup: True
	            title: "[size=25dp][font=font]'      OPCIONES'[/font][/size]"
	            with_previous: False
		
<AuthScreen>:
	name: "auth"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
		TextInput:
			text: 'Nombre'
		TextInput:
			text: 'Password'
			password: True
		Button:
			text: 'hola'
	        on_release: root.changeScreen()
        	

<HomeScreen>:
	name: "Home"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
		Button:
			text: 'HISTORIAL' 
	        on_release: root.goToCalledScreen("Historial")
		Button:
			text: 'CARGAR'
	        on_release: root.goToCalledScreen("Cargar")
		Button:
			text: 'DESCARGAR'
	        on_release: root.goToCalledScreen("Retirar")

<HistoryScreen>:
	name: "Historial"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
	Button:
		text: 'HOME' 
        on_release:
        	root.goToHomeScreen()

<ChargeScreen>:
	name: "Cargar"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
	Button:
		text: 'HOME' 
        on_release:
        	root.goToHomeScreen()

<WithdrawScreen>:
	name: "Retirar"
	fullscreen: True
	BoxLayout:
	    orientation: 'vertical'
		canvas.before:
			Color:
				rgb: 1, 0.5, 0
			Rectangle:
				size: self.size
	Button:
		text: 'HOME' 
        on_release:
        	root.goToHomeScreen()